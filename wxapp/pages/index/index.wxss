.container { padding: 50rpx; text-align: center; }
.status-box {
  width: 400rpx; height: 400rpx; border-radius: 50%;
  margin: 50rpx auto; display: flex; align-items: center; justify-content: center;
  transition: all 0.3s;
}
.normal { background-color: #07c160; box-shadow: 0 0 20rpx #07c160; }
.alarm { background-color: #ff4d4f; box-shadow: 0 0 50rpx #ff4d4f; animation: pulse 1s infinite; }
.status-text { color: white; font-size: 40rpx; font-weight: bold; }
.info { display: flex; flex-direction: column; font-size: 32rpx; margin-top: 20rpx; }
.btn { margin-top: 100rpx; }

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

